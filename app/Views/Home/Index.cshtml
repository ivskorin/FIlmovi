
@{
    ViewBag.Title = "Home Page";
}


<table class="table">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Trajanje</th>
            <th>Zanr</th>
            <th>Država</th>
            <th>Cijena</th>
            <th>Glumac</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var film in Model)
        {
        <tr>
            <td>@film.Naziv</td>
            <td>@film.Trajanje</td>
            <td><a href="@Url.Action("FilmoviPoZanru", new { zanrId = film.Zanr.Id })">@film.Zanr.Naziv</a></td>
            <td>@film.Drzava.Naziv</td>
            <td>@film.Cijena</td>
            <td>@film.Glumci.Ime</td>
        </tr>
        }
    </tbody>
</table>